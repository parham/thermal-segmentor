{
    "model" : {
        "name" : "wnet",
        "config" : {
            "num_channels": 3,
            "num_classes": 3
        }
    },
    "metrics" : {
        "confusion_matrix_multilayer" : {
            "cal_stats" : false
        },
        "smp": {
            "mode" : "multilabel",
            "threshold" : 0.5,
            "num_classes" : 3,
            "metrics": {
                "f1" : {
                    "reduction" : "macro",
                    "class_weights" : null,
                    "zero_division" : 1
                },
                "iou" : {
                    "reduction" : "macro",
                    "class_weights" : null,
                    "zero_division" : 1
                }
            }
        }
    },
    "loss": {
        "name": "cross_entropy",
        "config": {
          "reduction": "mean"
        }
    },
    "optimizer": {
        "name": "SGD",
        "config": {
          "lr": 0.5,
          "momentum": 0.9,
          "weight_decay": 0.005
        }
    },
    "scheduler" : {
        "name" : "CosineAnnealingLR",
        "config" : {
          "start_value": 0.1,
          "end_value": 0.0005,
          "cycle_size": 10,
          "cycle_mult": 2,
          "mult": 0.8
        }
    },
    "pipeline" : {
        "wnet_train" : {
            "wrapper" : "platesim_wrapper",
            "max_epoch" : 10,
            "batch_size" : 5,
            "multilayer_target" : true
        }
    }
}
